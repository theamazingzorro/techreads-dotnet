@using TechReads.Library.Models
@model TechReads.Web.Models.ReviewFormModel;

<h2>Add Review</h2>
<form asp-action="Add">
</form>

@using(Html.BeginForm("Save", "Review", Model.Review, FormMethod.Post ))
{
    <h4>User: @Model.Reviewer.DisplayName</h4>

    @Html.LabelFor(m => m.Review.BookId, "Book")
    @Html.DropDownListFor(m => m.Review.BookId, new SelectList(Model.Books, "BookId", "Title")) <br />

    @Html.LabelFor(m => m.Review.Stars) @Html.TextBoxFor(m => m.Review.Stars) <br />
    @Html.LabelFor(m => m.Review.Comment) @Html.TextAreaFor(m => m.Review.Comment) <br />

    @Html.HiddenFor(m => m.Review.ReviewerId)

    <button type="submit">Save</button>
}